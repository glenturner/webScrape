<div id="wrapper">
    <div class="container">
        <div class="row">
            <div class="col l12 m12 s12">
                <h5 class="flow-text center">Click on the articles below to add notes for each article </h5>
                <div>
                    <div class="col l12 m12 s12 center">
                        <a class="btn black lighten-1 flow-text align-center" id="viceButton" href="/scrape">Get News</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m12 l12"><br></div>
            </div>
            <div class="row">
                <div id="articles">
                    <div class="col l6 m6 s12">
                        <ul>
                            {{#each article}}


                                <div class="card blue darken-2">
                                    <li data-id="{{this.id}}" class="#modal1">
                                        <h5>{{this.title}}</h5>

                                    </li>
                                    <span class="card-title condensed thin center">
                                    </span>
                                    <div class="card-action"><a href="{{this.link}} " class="left thin text-black">
                                        Read More </a></div>
                                    <br>
                                </div>
                            {{/each}}
                        </ul>
                    </div>
                </div>
                <div id="modal1" class="modal">
                    <div class="modal-content">

                    </div>
                    <div class="modal-footer">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


